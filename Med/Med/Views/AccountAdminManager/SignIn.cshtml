@model Med.Models.LoginModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вход в систему - МЕДЯТИНА</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/custom.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6 col-lg-4">
                <div class="card mt-5">
                    <div class="card-body">
                        <h2 class="text-center mb-4">Вход в систему</h2>
                        <form asp-action="SignIn" method="post">
                            <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
                            <div class="form-group">
                                <label for="Username">Имя пользователя</label>
                                <input asp-for="Username" class="form-control" id="Username" placeholder="Введите имя пользователя">
                                <span asp-validation-for="Username" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label for="PasswordUser">Пароль</label>
                                <input asp-for="PasswordUser" type="password" class="form-control" id="PasswordUser" placeholder="Введите пароль">
                                <span asp-validation-for="PasswordUser" class="text-danger"></span>
                            </div>
                            <button type="submit" class="mt-2 btn btn-primary btn-block">Войти</button>
                        </form>
                        <p class="text-center mt-3">Ещё не в пчелиных рядах? <a asp-action="SignUp">Зарегистрируйтесь</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>
