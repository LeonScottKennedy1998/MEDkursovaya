@model Med.Models.ForgotPasswordModel

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card mt-5">
                <div class="card-body">
                    <h2 class="text-center mb-4">Восстановление пароля</h2>
                    <form asp-action="ForgotPassword" method="post">
                        <div asp-validation-summary="All" class="text-danger text-center mb-3"></div>
                        <div class="form-group">
                            <label>Email</label>
                            <input asp-for="Email" class="form-control" placeholder="Введите ваш Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <button type="submit" class="btn btn-primary btn-block mt-2">Отправить письмо</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
