@model Med.Models.Review

<div class="review">
    <p><strong>@Model.User.NameUser</strong> оставил(а) отзыв:</p>
    <p>
        @for (int i = 0; i < Model.Rating; i++)
        {
            <span>⭐</span>
        }
    </p>
    <p>@Model.ReviewText</p>
    <p><small>Дата: @Model.CreatedAt.ToString("dd.MM.yyyy")</small></p>
</div>
