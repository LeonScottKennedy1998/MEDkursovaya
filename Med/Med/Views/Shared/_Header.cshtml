@using System.Security.Claims
@inject IHttpContextAccessor HttpContextAccessor
<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-warning">
        <div class="container-fluid">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">МЕДЯТИНА</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link active" asp-controller="Home" asp-action="Index">Главная</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Catalog">Каталог</a>
                    </li>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Cart" asp-action="Index">Корзина</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Order" asp-action="Index">Заказы</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        var name = User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value;
                        var role = User.Claims.FirstOrDefault(c => c.Type == ClaimTypes.Role)?.Value; 

                        <li class="nav-item">
                            @if (role == "Админ")
                            {
                                <a class="nav-link" asp-controller="Admin" asp-action="AdminManage">Здравствуйте, @name! (Роль: @role)</a>
                            }
                            else if (role == "Менеджер")
                            {
                                <a class="nav-link" asp-controller="Manager" asp-action="ManagerManage">Здравствуйте, @name! (Роль: @role)</a>
                            }
                            else
                            {
                                <span class="nav-link">Здравствуйте, @name! (Роль: @role)</span>
                            }
                        </li>
                        <li class="nav-item">
                            <form asp-controller="AccountAdminManager" asp-action="Logout" method="post" class="d-inline">
                                <button type="submit" class="btn btn-outline-dark nav-link">Выйти</button>
                            </form>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AccountAdminManager" asp-action="SignIn">Войти</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="AccountAdminManager" asp-action="SignUp">Зарегистрироваться</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>
</header>